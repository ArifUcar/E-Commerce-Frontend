@inherits LayoutComponentBase
@using E_Commerce_FrontEnd.Layout

<div class="page">
    <Header />
    
    <main>
        @Body
    </main>

    <footer class="footer mt-auto py-4 bg-light">
        <div class="container">
            <div class="row g-4">
                <div class="col-12 col-md-4">
                    <h5 class="mb-3">Hakkımızda</h5>
                    <p class="text-muted">
                        E-Ticaret sitemiz, müşterilerimize en kaliteli ürünleri en uygun fiyatlarla sunmayı hedefler.
                    </p>
                </div>
                <div class="col-12 col-md-4">
                    <h5 class="mb-3">Hızlı Linkler</h5>
                    <ul class="list-unstyled">
                        <li><a href="/about" class="text-decoration-none text-muted">Hakkımızda</a></li>
                        <li><a href="/contact" class="text-decoration-none text-muted">İletişim</a></li>
                        <li><a href="/faq" class="text-decoration-none text-muted">Sık Sorulan Sorular</a></li>
                        <li><a href="/privacy" class="text-decoration-none text-muted">Gizlilik Politikası</a></li>
                    </ul>
                </div>
                <div class="col-12 col-md-4">
                    <h5 class="mb-3">İletişim</h5>
                    <ul class="list-unstyled text-muted">
                        <li><i class="bi bi-geo-alt me-2"></i>Adres: İstanbul, Türkiye</li>
                        <li><i class="bi bi-telephone me-2"></i>Tel: +90 (555) 123 45 67</li>
                        <li><i class="bi bi-envelope me-2"></i>E-posta: info@eticaret.com</li>
                    </ul>
                    <div class="social-links mt-3">
                        <a href="#" class="text-muted me-3"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-muted me-3"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-muted me-3"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-muted"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="text-center text-muted">
                <small>&copy; @DateTime.Now.Year E-Ticaret. Tüm hakları saklıdır.</small>
            </div>
        </div>
    </footer>
</div>

<style>
    .page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    main {
        flex: 1;
    }

    .footer {
        background-color: #f8f9fa;
    }
</style> 