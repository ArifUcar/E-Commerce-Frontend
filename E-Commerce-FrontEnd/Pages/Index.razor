@page "/"
@using E_Commerce_FrontEnd.Models
@using E_Commerce_FrontEnd.Services
@using E_Commerce_FrontEnd.Shared
@inject IProductService ProductService
@inject ICategoryService CategoryService
@inject NavigationManager NavigationManager

<div class="container py-4">
    <!-- Kategoriler -->
    @if (categories == null)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
        </div>
    }
    else if (!categories.Any())
    {
        <div class="alert alert-info">
            Henüz kategori bulunmamaktadır.
        </div>
    }
    else
    {
        <h5 class="mb-3">Kategoriler</h5>
        <div class="row g-4 mb-5">
            @foreach (var category in categories)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm category-card" 
                         @onclick="() => NavigateToCategory(category.Id)">
                        <div class="card-body text-center">
                            <h6 class="card-title mb-0">@category.CategoryName</h6>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Öne Çıkan Ürünler -->
    <div class="row mb-5">
        <div class="col-12">
            <h5 class="mb-3">Öne Çıkan Ürünler</h5>
        </div>
        @if (featuredProducts == null)
        {
            <div class="text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Yükleniyor...</span>
                </div>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var product in featuredProducts)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <ProductCard Product="product" OnProductClick="@(p => NavigateToProduct(p.Id))" />
                    </div>
                }
            </div>
        }
    </div>

    <!-- Yeni Ürünler -->
    <div class="row mb-5">
        <div class="col-12">
            <h5 class="mb-3">Yeni Ürünler</h5>
        </div>
        @if (newProducts == null)
        {
            <div class="text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Yükleniyor...</span>
                </div>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var product in newProducts)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <ProductCard Product="product" OnProductClick="@(p => NavigateToProduct(p.Id))" />
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    .category-card {
        cursor: pointer;
        transition: transform 0.2s;
    }

    .category-card:hover {
        transform: translateY(-5px);
    }
</style>

@code {
    private List<Category> categories;
    private List<Product> featuredProducts;
    private List<Product> newProducts;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        categories = await CategoryService.GetAllCategories();
        var allProducts = await ProductService.GetAllProducts();
        
        // Örnek olarak ilk 8 ürünü öne çıkan olarak gösterelim
        featuredProducts = allProducts.Take(8).ToList();
        // Son 8 ürünü yeni ürünler olarak gösterelim
        newProducts = allProducts.OrderByDescending(p => p.CreatedDate).Take(8).ToList();
    }

    private void NavigateToCategory(string categoryId)
    {
        NavigationManager.NavigateTo($"/category/{categoryId}");
    }

    private void NavigateToProduct(string productId)
    {
        NavigationManager.NavigateTo($"/product/{productId}");
    }
} 